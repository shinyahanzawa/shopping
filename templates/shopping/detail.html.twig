<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <script
      language="JavaScript"
      type="text/javascript"
      src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script
      language="JavaScript"
      type="text/javascript"
      src="{{ constant('shopping\\Bootstrap::APP_URL') }}js/shopping.js"></script>
    <link
      href="{{ constant('shopping\\Bootstrap::APP_URL') }}css/shopping.css"
      rel="stylesheet"
      type="text/css"/>
  </head>
  <body>
    <input
      type="hidden"
      name="entry_url"
      value="{{ constant('shopping\\Bootstrap::ENTRY_URL') }}"
      id="entry_url"/>
    <div id="wrapper">
      {% include 'header.html.twig' %}
      {% include 'category_menu.html.twig' %}
      <div id="item_detail">
        <br><br>
        <div class="image">
          <img
            src="{{ constant('shopping\\Bootstrap::ENTRY_URL') }}images/{{
            itemData.image}}"alt="{{ itemData.item_name }}"/>
        </div>
        <div class="detail">
          <br>
          <dl>
            <dt>Name</dt>
            <dd>{{ itemData.item_name }}</dd>
            <dt>Details</dt>
            <dd>{{ itemData.detail }}</dd>
            <dt>Price</dt>
            <dd>&yen;{{itemData.price|number_format(0, '.', ',')}}</dd>
            <input
              type="hidden"
              name="item_id"
              id="item_id"
              value="{{ itemData.item_id }}"/>
          </dl>
        </div>
        <div class="cart_in">
          <input
            type="button"
            name="back"
            value="Back"
            onclick="history.back(); return false;"/>
          {% if userArr.loginon == true %}
            <input
            type="button"
            name="cart_in"
            value="Add to cart"
            id="cart_in"/>
          {% endif %}
        </div>
      </div>
    </div>
  </body>
</html>
